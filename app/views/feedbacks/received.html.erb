<% content_for :title, "Completed Feedback" %>
<div class="center"> 

<table class="table">
  <thead>
    <tr>
      <th scope="col">Course Name</th>
      <th scope="col">Project Name</th>
      <th scope="col">Team Name</th>
      <th scope="col">Due Date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <%@assigned_checkpoints.each do |checkpoint| %>
        <tr>
            <td><%=checkpoint.course.course_name%></td>
            <td><%=checkpoint.checkpoint_name%></td>
            <td><%=@teams.find(checkpoint.id).team_name%></td>
            <td><%=checkpoint.due_date%></td>
            <td><%=button_to "View", feedback_view_completed_path(checkpoint.id), class: "btn btn-primary", method: :get%></td>
        </tr>
    <% end %>
    
  </tbody>
</table>

</div>
