<p id="notice"><%= notice %></p>

<!-- Lets layout know what the title is-->
<% content_for :title, "Admin Courses"%>
<h2> <%= Current.user.fname%></h2>

<%= button_to "Create New Course", new_course_path, class: "btn btn-primary", method: :get %>

<table class="table">
  <thead>
    <tr>
      <th scope="col"> Course Name </th>
      <th scope="col"> Class Code</th>
      <th scope="col"> Admin Code</th>
      <th scope="col"> Actions </th>
    </tr>
  </thead>
  <tbody>
    <% Current.user.courses.each do |c|%>
      <tr>
        <td><strong><%= c.course_name %></strong></td>
        <td><%= c.class_code%></td>
        <td><%= c.admin_code%></td>
        <td><%= button_to "View Course", view_course_details_path(c), class: "btn btn-primary", method: :get %></td>
        <td><%= button_to "Delete Course", destroy_course_path(c), class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end%>
  </tbody>
</table>


<%= link_to 'Back', root_path %>