<p id="notice"><%= notice %></p>

<!-- Lets layout know what the title is-->
<% content_for :title, "User Courses"%>
<p> <%= Current.user.fname%></p>

<table>
  <tr>
    <th> Course Name </th>
    <th> Actions </th>
  </tr>
  <% Current.user.courses.each do |c|%>
  <tr>
    <td><%= c.course_name %></td>
    <% if Current.user.role == 1%>
    <td> Leave <td>
    <%else%>
    <td> Delete </td>
    <%end%>
  </tr>
  <%end%>
  <tr>
    <td> Add Class</td>
  </tr>
</table>


<%= link_to 'Back', Current.user %>